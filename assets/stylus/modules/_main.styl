div
  padding-top 0px

h1
  font-family Roboto Slab
  font-weight bold
  font-size 40px
  color #3C2D82
  margin auto

h2
  font-family Roboto Slab
  font-weight bold
  font-size 1.6em
  color #3C2D82
  margin auto

h3
  font-family Roboto Slab
  font-weight bold
  font-size 2em
  color #ffffff
  max-width 1100px
  margin auto

p
  font-family Proxima Nova
  font-weight regular
  font-size 20px
  line-height 1.4
  letter-spacing .4px
  margin auto
  text-align justify

#hero
  width 100%
  height 547px
  position relative
  background-repeat no-repeat

  #hero-logo
    background-image url(https://preview.ibb.co/jNBAgJ/Ocasio2018_Logo_WHITE.png)
    background-size contain
    background-repeat no-repeat
    max-height 369px
    height auto
    width auto
    opacity 0.7
    margin auto
    position absolute
    right 20%

  #hero-signup
    top 20%
    right 6.45%
    color white
    position absolute
    text-align center

    fieldset
      border none

    #join
      background-color hsla(0,0%,100%,.1)
      font-family Proxima Nova
      font-weight 600
      max-width 351px

      #join-prompt
        font-size 28px
        font-family Roboto Slab, serif
        font-weight bold
        text-align center
        margin-top -10px
        text-shadow 0 2px 4px 0

      #join-subtitle
        font-size 14px
        font-style normal
        font-weight normal
        text-align center

      .form-row
        margin-top 8px
        margin-bottom 8px

        #join-submit
          color #FFFFFF
          font-family Proxima Nova
          font-size 13px
          font-weight 600
          line-height 23px
          text-align center
          letter-spacing 1px

.nav
  height 129px
  background-color #f5f5f5
  flexbox(flex)
  justify-content(center)
  align-items(center)
  flex-wrap nowrap
  padding-left 10%
  // padding-right 10%

  .logo
    max-height 89px
    max-width 100%
    margin-right 137px

.tabs
  margin-bottom 0px !important // Countering stupid CSS

  .tabs-nav
    flexbox(flex)
    justify-content space-between
    flex-wrap nowrap
    line-height 0px !imporant // Countering stupid CSS
    margin-bottom 0px // Countering stupid CSS

    .nav-item
      text-transform uppercase
      color #3C2D82
      padding 1rem 1rem !important // Countering stupid CSS
      font-family Proxima Nova
      font-size 17px
      cursor pointer
      font-weight bold
      background none
      letter-spacing 1px

      .contribute
        border 0px !important
        color #ffffff !important
        border-radius 3px !important
        height 51px !important
        background-color rgba(80,192,32,0.83) !important

      .volunteer
        color #ffffff !important
        border-radius 3px!important
        height 51px
        border 0px !important

    .separator
