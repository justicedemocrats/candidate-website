.same-row
  flexbox(flex)
  justify-content space-between


  input[name="name"], input[name="email"]
    width 48%

  input[type="tel"]
    width 60%

  input[name="zip"]
    width 35%;

  input[type="submit"]
    width 100%

#footer
  background-color #F5F5F5
  padding 50px
  padding-top 50px

  .nav-item
    background-color transparent

  #paid-for-container
    width 100%
    flexbox(flex)
    justify-content center
    align-items(center)
    min-height 110px

    #paid-for
      border 1px solid #9B9B9B
      padding 20px
      color #9B9B9B
      font-family 'Montserrat'

.more-about
  display inline
  font-size larger
  font-family 'Roboto Condensed'
  text-transform uppercase

.mobile
  #button-layer
    width 100%
    justify-content(space-around)
    margin 0

#button-layer
  flexbox(flex)
  justify-content space-between
  margin-left 50px
  margin-right 50px
  padding-top 20px
  align-items(center)

  #social-container
    flexbox(flex)
    justify-content space-between
    width 100px
    align-items(center)

  .button-light
    background-color transparent
    color white
    border 2px solid white

#filled-animate
  transition height ease-out 1s

.mobile
  #hero
    background-size cover
    min-height 250px
    background-position left
    background-repeat no-repeat

  .tabs
    .tabs-nav
      .nav-item
        font-size smaller


#name-separator
  margin-top 10px
  margin-bottom 10px
  flexbox(flex)
  justify-content(space-between)

  .half
    width 45%
    margin-bottom 15px

  .star
    font-size 22px

.mobile
  #name
    font-size 35px

#name
  font-size 46px
  text-transform uppercase
  font-family 'Montserrat'
  font-weight 900
  flexbox(flex)
  flex-direction(column)
  align-items(center)

#district
  flexbox(flex)
  font-weight bolder
  text-transform uppercase

  #for-blank, #district-spec
    width 50%
    text-align center
    flexbox(flex)
    align-items(center)
    justify-content(center)

  #separator
    margin-top 3px
    margin-bottom 3px

#join
  margin-top 20px
  background-color rgba(255, 255, 255, .1)
  font-family 'Montserrat'

  #join-prompt
    text-align center
    text-transform capitalize
    font-size larger
    font-family 'Montserrat'

  #join-subtitle
    font-size smaller
    font-style italic
    font-family 'Montserrat'
    text-align center

  .form-row
    margin-top 5px
    margin-bottom 5px

