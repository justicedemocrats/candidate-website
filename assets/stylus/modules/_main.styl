// About Chunk //

#chunk-about
  flexbox(flex)
  margin-top 60px
  margin-bottom 60px

  #about-text
    margin-right 4.5rem

    #about-header
      margin-bottom 1rem

  #about-image
    margin-left 4.51rem

    #district-image
      max-height 247px
      max-width 100%
      margin-bottom 8px

    #district-image-text
      margin-top 8px
      font-size 36px
      font-weight bold
      text-align center !important

// Issues Chunk //

#chunk-issues
  background-color #F8D11C
  flexbox(flex)
  padding-top 60px

  #issues-image-container
    margin-top auto
    width 50%

    #issues-image
      margin-bottom auto
      max-width 115%
      min-width 100%
      height auto
      width auto/9

  #issues-text
    flexbox(flex)
    flex-direction column
    width 40%

    #issues-header
    	font-family Roboto Slab
    	line-height 45px
      margin-bottom 2em

    #issues-paragraph
      font-family Proxima Nova
      font-size 20px
      line-height 29px

  #issues-separator
    width 10%

// Why Support Shortened //

#chunk-why-shortened
  flexbox(flex)
  background-color #ffffff
  align-items center
  justify-content center
  margin 4em 0em 5em 0em

  #shortened-support-header
    color #3C2D82
    font-family Roboto Slab
    font-size 64px
    font-weight bold
    line-height 76px
    text-align center

// Why Support //

#chunk-why
  background-color #3C2D82
  flexbox(flex)
  flex-direction row
  padding 0

  #why-support-text
    flexbox(flex)
    flex-direction column
    padding 4em 0em 4em 10%
    margin 0em 5em 0em 0em

    #why-support-header
      margin 0em 0em 1em 0em

      #why-support-header-text
        color #FFFFFF
        line-height 45px

    #why-support-body
      margin 1em 0em 1em 0em

      p
        color #FFFFFF
        line-height: 29px;

    #why-support-learn-more
      margin 2em 0em 0em 0em

      #why-support-cta
        color #FFFFFF
        font-family Proxima Nova
        font-size 14px
        font-weight bold
        line-height 17px
        text-transform uppercase
        text-align center

  #why-support-image
    // background-image url(https://cosmic-s3.imgix.net/af195580-5a40-11e8-af91-73e918c660c1-alex_on_street.png)
    background-image url(https://i.imgur.com/MoJ1emX.png)
    background-repeat no-repeat
    background-position right
    background-size cover
    width 100%

// Donate Chunk //

#chunk-donate
  flexbox(flex)
  flex-direction(column)
  align-items center
  justify-content center
  background-color #EDEDED;
  margin 2.5em 2.5em 2.5em 2.5em
  padding 4em 0em 4em 0em

  #donate-header
    margin-bottom 2.5em

    #donate-header-text
      color: #3C2D82;
      line-height: 45px;
      text-align center

  #circles-container
    flexbox(flex)
    text-align center
    margin 2.5em 0em 2.5em 0em

    .circle
      flexbox(flex)
      justify-content center
      flex-direction(column)
      height 155px
      width 155px
      color white
      background-color rgba(80,192,32,0.83)
      font-weight bold
      border 8px solid white
      border-radius 50%
      margin 0px 2.5em 0px 2.5em

      .amount
        font-size 35px

  #custom-donation-container
    flexbox(flex)
    text-align center
    margin 2.5em .75em .5em .75em !important

    #custom-contribution-go
      border 0px // Countering stupid CSS
      height 100%
      color #ffffff
      text-transform uppercase
      font-weight bold
      font-size 18px
      background-color rgba(80,192,32,0.83)
      padding 10px 20px 10px 20px
      margin-left 12px

    #custom-contribution
      border 0px // Countering stupid CSS
      width 101px
      height 100%
      text-align center
      font-weight bold
      color #9E9E9E
      background-color #FFFFFF
      box-shadow inset 1px 1px 1px 0 rgba(0,0,0,0.5)
      padding 10px 0px 10px 0px
      margin-right 12px

// Platform Chunk //

#chunk-platform
  flexbox(flex)
  flex-direction column
  align-items center
  justify-content center
  background-color #EDEDED;

  #platform-header
    flexbox(flex)
    margin 4em 0em 4em 0em
    width 100%

    #platform-header-text
      font-size 4em

  #planks-container
    flexbox(flex)
    justify-content center
    flex-wrap wrap

    .plank-container
      flex-grow 1
      flexbox(flex)
      flex-direction(column)
      justify-content space-between
      text-align center
      background-color #FFFFFF
      margin 0.75em
      padding 2em
      width 30%
      max-width 384px
      min-height 322px

      .plank-header
        text-align center
        width 100%
        min-height 6em

        .plank-header-text
          font-size 36px
          font-family Roboto Slab
          text-align center
          font-weight bold
          color #3C2D82

      .plank-intro-container
        width 100%
        align-self flex-start

        .plank-intro
          align-self flex-start

          .plank-intro-text
            font-size 18px

            h2
              display none

      .plank-cta-container
        margin-top 1em

        .plank-cta
          color: #3C2D82;
          font-family Proxima Nova
          font-size 14px
          font-weight bold
          text-transform uppercase
          margin-bottom 0.5em
          border-bottom 2px solid #3C2D82

  #planks-button-container
    padding 4em 0 5em 0

    #planks-cta-button
      background-color #3C2D82
      // border-radius 3px;
      // box-shadow 0 2px 4px 0 rgba(0,0,0,0.5), 2px 2px 6px 0 rgba(0,0,0,0.5)
      padding 1em 2em 2em 2em
      font-family Proxima Nova
      font-size 18px
      font-weight 600
      line-height 18px
      text-align center
      &:hover
        background-color rgb(140, 116, 255)

