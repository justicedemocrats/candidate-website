#hero
  width 100%
  min-height 550px
  background-size contain
  background-position center
  background-position center
  background-repeat no-repeat
  position relative

  #hero-signup
    width 33vw
    bottom 1%
    right 10%
    position absolute
    text-align center
    color white

    fieldset
      border none

.tabs
  padding-left 10%
  padding-right 10%

  .tabs-nav
    text-align center
    flexbox(flex)
    justify-content space-between
    flex-wrap wrap

    .nav-item
      color black
      text-transform uppercase
      color #A0A0A0
      padding 30px 20px
      font-family Montserrat
      font-size 17px
      cursor pointer
      font-weight lighter

    .nav-item.logo
      padding 0px

    .separator
      margin-top 15px
      margin-bottom 15px
      border-right 1px solid #A0A0A0

.contribute
	border 2px solid #7ED321 !important
	color #7ED321 !important
	border-radius 103.68px !important
	background-color rgba(126,211,33,0.1) !important

.contribute
  font-weight bold !important

h1
  font-family Montserrat

.chunk
  padding-left 10%
  padding-right 10%
  padding-top 30px
  padding-bottom 30px

.chunk:nth-child(odd)
  background-color #f5f5f5

